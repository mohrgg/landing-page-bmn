generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  nip       String   @unique
  password  String   // Hashed
  name      String
  role      Role     @default(SATKER)
  isActive  Boolean  @default(true) 
  
  // Relasi ke Satker
  satkerId  String?
  satker    Satker?  @relation(fields: [satkerId], references: [kode])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Satker {
  kode      String   @id // Contoh: "123456"
  nama      String
  wilayah   String?
  users     User[]
}

enum Role {
  INTERNAL
  SATKER
}

model ActivityLog {
  id        String   @id @default(cuid())
  action    String   // CREATE, UPDATE, DELETE, RESET_PASSWORD
  details   String   @db.Text
  target    String?  // e.g. "User: John Doe"
  actorName String   // Admin who performed the action
  createdAt DateTime @default(now())
}
